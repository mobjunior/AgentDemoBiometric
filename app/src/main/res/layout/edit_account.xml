<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp"
        android:background="#0081CA" >
        <Button
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:onClick="back"
            android:background="@drawable/back"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text=" Create Acc"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myroundlayout"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">
    <EditText
        android:id="@+id/edit_accountnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="7dp"
        android:background="#ffffff"
        android:textSize="15dp"
        android:maxLength="15"
    	android:hint="@string/CustomerBankActivity_edit_accountnumber"
    	android:inputType="number" />    
    
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="7dp"
        android:background="#ffffff"
        android:textSize="15dp"
        android:maxLength="15"
    	android:hint="@string/CustomerBankActivity_edit_password"
    	android:inputType="textPassword" />
    

    <Button
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/myround"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="@string/create_account_button_create" />
    </LinearLayout>

</RelativeLayout>
