<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp"
        android:background="#0081CA" >
        <Button
          android:layout_width="34dp"
            android:layout_height="34dp"
            android:onClick="back"
            android:background="@drawable/back"
            android:layout_marginLeft="5dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text=" Withdraw Acc"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/myroundlayout"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_centerInParent="true"
    android:layout_margin="20dp">
    <EditText
        android:id="@+id/edit_account_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="15"
        android:hint="@string/cash_out_first_edit_account_number"
        android:inputType="text"
        android:background="#ffffff"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:padding="7dp"/>

      <EditText
        android:id="@+id/edit_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:maxLength="8"
        android:hint="@string/cash_out_first_edit_withdraw"
        android:inputType="numberDecimal"
          android:background="#ffffff"
          android:layout_marginBottom="10dp"
          android:padding="7dp"
          android:fontFamily="sans-serif"/>

    <Button
        android:id="@+id/button_validate"
        android:text="@string/cash_out_first_button_validate"
        android:background="@drawable/myround"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
       />
    </LinearLayout>
</RelativeLayout>
